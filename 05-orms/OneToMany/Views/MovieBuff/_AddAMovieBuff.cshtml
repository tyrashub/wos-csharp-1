@model MovieBuff;

<div class="card shadow">
    <div class="card-body">
        <form asp-action="CreateMovieBuff" asp-controller="MovieBuff" method="post">
            <div class="mb-3">
                <label class="form-label" asp-for="FirstName"></label>
                <input class="form-control" asp-for="FirstName">
                <span class="form-text text-warning" asp-validation-for="FirstName"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="LastName"></label>
                <input class="form-control" asp-for="LastName">
                <span class="form-text text-warning" asp-validation-for="LastName"></span>
            </div>
            <div class="text-end">
                <button type="submit" class="btn btn-primary">Add Movie Buff</button>
            </div>
        </form>
    </div>
</div>
