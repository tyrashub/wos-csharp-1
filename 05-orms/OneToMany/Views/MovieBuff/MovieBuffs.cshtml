@model MovieBuffsPageViewModel;

@{
    var movieBuff = Model.MovieBuff;
    var movieBuffs = Model.MovieBuffs;
    ViewData["Title"] = "Movie Buffs Page";
}

<section>
    <h1 class="display-4 mb-3">Movie Buffs Page</h1>
    <div class="row">
        <div class="col-12 col-md-6">
            <h2 class="display-6 mb-3">All Movie Buffs</h2>
            @await Html.PartialAsync("_AllMovieBuffs", movieBuffs)
        </div>
        <div class="col-12 col-md-6">
            <h2 class="display-6 mb-3">Add a Movie Buff</h2>
            @await Html.PartialAsync("_AddAMovieBuff", movieBuff)
        </div>
    </div>
</section>
