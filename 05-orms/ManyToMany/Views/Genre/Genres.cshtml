@model GenresPageViewModel;

@{
    var genre = Model.Genre;
    var genres = Model.Genres;
    ViewData["Title"] = "Genres";
}

<section>
    <h1 class="display-4 mb-3">Genres</h1>
    <div class="row">
        <div class="col-12 col-md-6">
            <h2 class="display-6 mb-3">All Genres</h2>
            @await Html.PartialAsync("_AllGenres", genres)
        </div>
        <div class="col-12 col-md-6">
            <h2 class="display-6 mb-3">Add a Genre</h2>
            @await Html.PartialAsync("_AddAGenre", genre)
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/focus-input.js"></script>
}