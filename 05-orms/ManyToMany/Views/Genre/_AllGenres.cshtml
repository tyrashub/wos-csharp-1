@model List<Genre>;

@{
    var genres = Model;
}

<div class="card shadow">
    <div class="card-body">
        <ul class="list-group list-group-flush">
            @foreach (var genre in genres)
            {
                <li class="list-group-item">
                    <a href="/genres/@genre.GenreId">@genre.Name</a>
                </li>
            }
        </ul>
    </div>
</div>
